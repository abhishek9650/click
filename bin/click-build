"""Build a Click package."""

from __future__ import print_function

from optparse import OptionParser
import os
import sys

# Support running from the build tree.
sys.path.insert(0, os.path.join(sys.path[0], os.pardir))

from clickpackage.build import ClickBuilder


def main():
    parser = OptionParser("%prog NAME DIRECTORY")
    _, args = parser.parse_args()
    if len(args) < 1:
        parser.error("need package name")
    if len(args) < 2:
        parser.error("need directory")
    name = args[0]
    directory = args[1]
    # TODO: hardcoding
    builder = ClickBuilder(name, "1.0", "Foo Bar <foo@example.org>", "test")
    builder.add_file(directory, "./")
    path = builder.build(".")
    print("Successfully built package in '%s'." % path)


if __name__ == "__main__":
    main()
